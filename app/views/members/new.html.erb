<h1>會員註冊</h1>

<table> 
  <%= form_for(@member) do |f| %>
  <div>
    <%= f.label :email, "帳號" %>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :password, "密碼"%>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation, "確認密碼"%>
    <%= f.password_field :password_confirmation %>
  </div>
  <div>
    <%= f.label :name, "名字"%>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.submit "註冊"%>
  </div>
  <% end %>
</table>
